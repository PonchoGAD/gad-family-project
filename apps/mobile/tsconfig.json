{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-native",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": [
      "expo",
      "expo-router",
      "react",
      "react-native"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@dc/*": [
        "../../src/dataconnect-generated/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "index.ts",
    "app.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
